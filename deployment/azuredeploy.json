{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Web App."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": [
        "F1", "B1", "B2", "B3", "S1", "S2", "S3", "P1v2", "P2v2", "P3v2"
      ],
      "metadata": {
        "description": "App Service plan SKU."
      }
    },
    "skuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Number of instances in the App Service plan."
      }
    },
    "nodeVersion": {
      "type": "string",
      "defaultValue": "~18",
      "allowedValues": [
        "~14",
        "~16",
        "~18",
        "~20"
      ],
      "metadata": {
        "description": "Node.js version for the Web App."
      }
    }
  },
  "variables": {
    "hostingPlanName": "[concat(parameters('siteName'), '-plan')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-03-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('skuName')]",
        "capacity": "[parameters('skuCapacity')]"
      },
      "properties": {
        "reserved": true  // Linux plan
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-03-01",
      "name": "[parameters('siteName')]",
      "location": "[parameters('location')]",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "[concat('NODE|', parameters('nodeVersion'))]"
        },
        "httpsOnly": true
      },
      "kind": "app,linux"
    }
  ],
  "outputs": {
    "webAppName": {
      "type": "string",
      "value": "[parameters('siteName')]"
    },
    "webAppUrl": {
      "type": "string",
      "value": "[concat('https://', parameters('siteName'), '.azurewebsites.net')]"
    }
  }
}
